generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  notes     SavedNote[]
  createdAt DateTime @default(now())
}

model SavedNote {
  id           String   @id @default(uuid())
  userId       String
  articleUrl   String
  articleTitle String
  content      String   @db.Text
  type         String   // "summary" or "notes"
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
